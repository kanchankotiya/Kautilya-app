<header class="blog-header mt-lg-0 mt-md-3">
  <div class="row flex-lg-nowrap d-md-flex flex-md-wrap justify-content-lg-between justify-content-md-center align-items-center no-gutters">
    <div class="col-lg-4 col-12 pt-1  mt-2 mb-4 text-lg-left text-md-center text-center">
      <a class="navbar-logo ml-lg-5" href="/"><%= image_tag "logo.png" %></a>
    </div>
    <div class="offset-lg-3 col-lg-4 text-md-center d-none d-lg-block d-md-block text-lg-right mr-3">
      <a class="text-muted demo-icon" href="#">
        <%= image_tag "icon1.png"%>
      </a>
      <a class="text-muted demo-icon  ml-sm-4" href="#">
        <%= image_tag "icon2.png"%>
      </a>
      <a class="text-muted demo-icon  ml-sm-4" href="#">
        <%= image_tag "icon3.png"%>
      </a>
    </div>
    <div class="offset-lg-3 col-lg-4 text-center d-block d-lg-none d-md-none mr-3">
      <a class="text-muted demo-icon" href="#">
        <%= image_tag "icon1.png"%>
      </a>
      <a class="text-muted demo-icon  ml-sm-4" href="#">
        <%= image_tag "icon2.png"%>
      </a>
      <a class="text-muted demo-icon  ml-sm-4" href="#">
        <%= image_tag "icon3.png"%>
      </a>
    </div>
  </div>
</header>
<nav class="navbar my-nav navbar-expand-lg pl-md-4 pr-md-0 pt-md-3 pb-md-3  mt-md-3 mt-3">
  <button class="navbar-toggler ml-lg-auto sticky-top" type="button" data-toggle="collapse" data-target="#navbarSupportedContent1" aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation">
    <span class="fa fa-bars text-white"></span>
  </button>
  <div class="search-icon ml-auto text d-lg-none d-md-block d-block" data-toggle="modal" data-target="#myModal1">
    <i class="fa fa-search text-white font-weight-bold"></i>
  </div>
  <div class="modal search-model" id="myModal1">
    <div class="modal-dialog">
      <a class="search-box-close" href="#">
        <i class="fa fa-times"></i>
      </a>
      <div class="search-box-wrapper">
        <p>
          Start typing and press Enter to search
        </p>
        <form action="#" class="search-box" method="get" role="search">
          <input class="search-input" name="q" placeholder="" type="text">
          <i class="fa fa-search">
          <input type="submit" value="">
          </i>
        </form>
      </div>
    </div>
  </div>
  <div class="collapse navbar-collapse flex-md-column  sticky-md-top" id="navbarSupportedContent1">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item  active">
       <a class=" font-weight-bold" href="/">Home</a>
      </li>
      <% @categories.each do |category| %>
        <li class="nav-item2">
          <%= link_to category_path(category) do %>
            <%= category.name %>
          <% end %> 
        </li>
      <% end %> 
      <% if user_signed_in? %>
        <li class="nav-item2"><%= link_to "Sign-out",destroy_user_session_path, method: :get %></li>
        <li class="nav-item2"><%= link_to "Edit",edit_user_registration_path %></li>
        <% else %>
         <li class="nav-item2"><%= link_to "Sign-in",  new_user_session_path  %></li>
        <li class="nav-item2"><%= link_to "Sign-up", new_user_registration_path %></li>
      <% end %>  
    </ul>
    <div class="search-icon ml-auto text d-lg-block d-md-none d-none" data-toggle="modal" data-target="#myModal">
      <i class="fa fa-search text-white font-weight-bold"></i>
    </div>
    <div class="modal search-model" id="myModal">
      <div class="modal-dialog">
        <a class="search-box-close" href="#">
          <i class="fa fa-times"></i>
        </a>
        <div class="search-box-wrapper">
          <p>
            Start typing and press Enter to search
          </p>
          <form action="#" class="search-box" method="get" role="search">
            <input class="search-input" name="q" placeholder="" type="text">
            <i class="fa fa-search">
            <input type="submit" value="">
            </i>
          </form>
        </div>
      </div>
    </div>
  </div>
</nav>
<main role="main" class="container mt-5">
  <div class="row">
    <div class="col-lg-8 col-md-12 blog-main pl-lg-0">
    <!-- Month wise grouped messages -->

    <% if @month_wise_sorted_alerts.present? %>
      <% @month_wise_sorted_alerts.each do |hash_elements|%>
      <h3> <%= Date::MONTHNAMES[hash_elements.first] %> </h3>
      <% hash_elements.last.each do |news| %>
        
          <%= news.title %>
          <%= news.created_at.strftime('%b %d') %> 

        <br />
      <% end %> 
      <br />
      <% end %>
    <% end %>
      <% if @news_paginate.present? %>
        <%= paginate @news_paginate %>
      <% end %>  
    </div><!-- /.blog-main -->
    <aside class="col-lg-4 col-md-12 blog-sidebar mt-md-2 mt-4 pr-lg-0 ">
      <div>
        <div class="card rounded-0 p-0 p-md-3">
          <div class="card-body p-md-0 p-3 pr-0">
            <div class="d-flex justify-content-between">
              <div class="pb-0 pt-4 pt-md-0 pb-md-0 pl-2 pr-2"><p class="font-arial font-weight-bold sm-para">MONTHLY CURRENT AFFAIRS</p></div>
              <div class="pb-0 pt-4 pt-md-0 pb-md-0 pl-2 pr-2"><i class="fa fa-calendar  text-muted"></i></div>
            </div>
            <hr class="mt-0 ml-md-0 mr-md-0 ">
            <ol class="list-unstyled mb-0">
              <%= link_to news_by_date_path(@month_wise_sorted_alerts) do%>
                <% @news_count.each do |a| %>
                  <li class="archivedate">
                    <%= a.join(" ") %>
                  </li>  
                <%end %>
              <% end %>  
            </ol>  
          </div>  
        </div>  
      </div>
      <div class="card rounded-0 p-0 p-md-3 mt-md-4 mt-4">
        <div class="card-body p-md-0 P-0">
          <div class="d-flex justify-content-between">
            <div class="pb-0 pt-0 pt-md-0 pb-md-0 pl-2 pr-2"><p class="font-arial font-weight-bold sm-para">ADVERTISMENT</p></div>
          </div> 
          <hr class="mt-0 ml-md-0 mr-md-0">
          <h6>Coming Soon...</h6>
        </div>  
      </div> 
      <div>
        <div class="card rounded-0 p-0 p-md-3 mt-md-4 mt-4">
          <div class="card-body p-md-0 p-3">
            <div class="d-flex justify-content-between">
              <div class="pb-0 pt-4 pt-md-0 pb-md-0 pl-2 pr-2"><p class="font-arial font-weight-bold sm-para">RECENT POSTS</p></div>
              <div class="pb-0 pt-4 pt-md-0 pb-md-0 pl-2 pr-2"><i class="fa fa-ellipsis-v  text-muted"></i></div>
            </div>
            <hr class="mt-0 ml-md-0 mr-md-0">
            <!-- <%# @news.order("created_at DESC").first(4).each do |news|%>  
              <a href="#"><%#= link_to news_path(news), class: "media-link" do%>
                <div class="media mt-3">
                  <%# if news.image.present? %>
                    <%#= image_tag news.image, class: "mr-3 post-img" %>
                  <%# else %>
                    <%#= image_tag "dummy.jpg", class: "mr-3 post-img" %>  
                  <%# end %>
                  <div class="media-body ml-0">
                    <div class="recent-title"><%#= news.title%></div>
                    <span class="text-muted"><small><%#= news.created_at.strftime("%b %d %Y")%></small></span>
                  </div>
                </div>
              <%# end %>
            <%# end %>   -->
          </div>  
        </div>  
      </div>
    </aside><!-- /.blog-sidebar -->
  </div><!-- /.row -->
</main><!-- /.container -->



